.search {
  font-size: 12px;
  color: #303030;
  border: 3px solid #A2A2A2;
  border-right: none;
  border-left: none;
  height: 30px;
  line-height: 30px;
}
.search input {
  padding-left: 10px;
}
.slide-image {
  width: 100%;
  height: 155px;
}
.hot_item {
  font-size: 14px;
  position: relative;
  border: 5px solid #fff;
  display: inline-block;
}
.hot_item image{
  height: 180px;
  width: 150px;
}
.hot_item text {
  display: block;
  width: 150px;text-align: center;
  height: 25px;
  color: #f5f5f5;
  position: absolute;
  bottom: 0px;
  left: 0px;
  background: rgba(240, 240, 240, .3);
}